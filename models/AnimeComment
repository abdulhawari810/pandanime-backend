import db from "../config/db.js";
import { Sequelize } from "sequelize";

const { DataTypes } = Sequelize;

const AnimeComment = db.define(
  "episode_comment",
  {
    userID: {
      type: DataTypes.INTEGER,
      unique: true,
      allowNull: false,
      validate: {
        notEmpty: {
          args: true,
          msg: "user id not empty",
        },
      },
    },
    episodeID: {
      type: DataTypes.INTEGER,
      unique: true,
      allowNull: false,
      validate: {
        notEmpty: {
          args: true,
          msg: "episode id not empty",
        },
      },
    },
    animeID: {
      type: DataTypes.INTEGER,
      allowNull: false,
      validate: {
        notEmpty: {
          args: true,
          msg: "anime id not empty",
        },
      },
    },
    comment: {
      type: DataTypes.TEXT,
      allowNull: true,
    },
  },
  {
    freezeTableName: true,
  }
);

export default AnimeComment;
